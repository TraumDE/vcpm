{
  "name": "vcpm",
  "description": "VCPM - Voxel Core Project Manager",
  "version": "0.4.2",
  "author": "Eugene301|TraumDE",
  "bin": "./bin/run.js",
  "bugs": "https://github.com/TraumDE/vcpm/issues",
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-autocomplete": "^3.2.40",
    "@zip.js/zip.js": "^2.8.16",
    "glob": "^13.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.16",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-oclif": "^6.0.137",
    "eslint-config-prettier": "^10.1.8",
    "mocha": "^11.7.5",
    "oclif": "^4.22.73",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.4.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/TraumDE/vcpm",
  "keywords": [
    "oclif",
    "CLI",
    "VCPM",
    "Voxel Core Project Manager",
    "Voxel Core",
    "Utility",
    "Util"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "macos": {
      "identifier": "com.voxelcorepackagemanager.cli"
    },
    "bin": "vcpm",
    "dirname": "vcpm",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {
      "build": {
        "description": "Build the project for production or development"
      }
    },
    "tarFlags": {"win32": ""}
  },
  "repository": "TraumDE/vcpm",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\" --exit",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts",
  "packageManager": "yarn@4.12.0"
}
